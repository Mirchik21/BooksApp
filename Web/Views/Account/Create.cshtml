@model CreateAccountCommand

@{
    ViewData["Title"] = "Добавление сотрудника";
}

<div class="main-content-wrap sidenav-open d-flex flex-column ">
    <div class="main-content">
        <div class="breadcrumb">
            <ul>
                <li><a asp-controller="Account" asp-action="Index">Главная</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
        <div class="separator-breadcrumb border-top"></div>
        <div class="col-md-10 mx-auto">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="card-title mb-3">Добавление сотрудника</div>
                      <form asp-action="Create" asp-controller="Account" method="post" autocomplete="off">
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label>Электронная почта</label>
                                <input class="form-control" asp-for="@Model.Email">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label>Фамилия</label>
                                <input class="form-control" asp-for="@Model.LastName">
                                <span class="text-danger" asp-validation-for="@Model.LastName"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label>Имя</label>
                                <input class="form-control" asp-for="@Model.FirstName">
                                <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label>Отчество</label>
                                <input class="form-control" asp-for="@Model.MiddleName">
                                <span class="text-danger" asp-validation-for="@Model.MiddleName"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="@Model.Password">Пароль</label>
                                <div class="input-group">
                                    <input type="password" asp-for="@Model.Password" class="form-control" data-toggle="password">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                    </div>
                                </div>
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="@Model.ConfirmPassword">Подтвердите пароль</label>
                                <div class="input-group">
                                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" data-toggle="password">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                    </div>
                                </div>
                                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                            </div>
                         </div>
                        <div class="col-md-12 mt-3">
                            <button type="submit" class="btn btn-primary"><i class="i-Disk mr-1 "></i>Сохранить</button>
                            <a class="btn btn-secondary" asp-action="Index" asp-controller="Account">Назад</a>
                        </div>
                      </form>
                </div>
            </div>
        </div> 
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery.mask.min.js"></script> 
} 
